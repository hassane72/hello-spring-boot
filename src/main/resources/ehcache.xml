<ehcache
         Name="CacheManager"
         maxBytesLocalHeap="250m">

    <defaultCache
            maxElementsInMemory="100"
            eternal="false"
            timeToIdleSeconds="1200"
            timeToLiveSeconds="1200"
            overflowToDisk="false">
    </defaultCache>

    <cache name="org.hibernate.cache.internal.StandardQueryCache"
           eternal="true"
    />
</ehcache>